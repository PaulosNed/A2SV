class Solution(object):
    def longestOnes(self, nums, k):
        fast = 0
        slow = 0
        longest = 0
        while (fast < len(nums)):
            if nums[fast] == 1:
                fast+=1
            elif nums[fast] == 0 and k > 0:
                fast += 1
                k -= 1
            else:
                if nums[slow] == 0:
                    k+=1
                slow+=1
            if longest < fast-slow:
                longest = fast-slow
        return longest
